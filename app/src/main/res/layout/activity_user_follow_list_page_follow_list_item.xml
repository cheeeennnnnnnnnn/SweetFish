<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal">

    <com.demo.sweetfish.ui.component.RoundImageView
        android:id="@+id/UserFollowListPageFollowListItemUserAvatarImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="false"
        app:radius="30dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"
        android:clickable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/UserFollowListPageFollowListItemUserNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:lines="1"
            android:text="用户名称"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UserFollowListPageFollowListItemUserDescribeTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:ellipsize="end"
            android:lines="1"
            android:text="用户简介"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/UserFollowListPageFollowListItemUserFanNumTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:ellipsize="end"
            android:lines="1"
            android:text="粉丝数 0"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/UserFollowListPageFollowListItemFollowButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/activity_user_follow_list_page_follow_list_item_follow_button_background"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:text="已关注"
        android:textColor="#999999"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
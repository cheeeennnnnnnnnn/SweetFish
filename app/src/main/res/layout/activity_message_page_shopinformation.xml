<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>

    <!-- 头像 -->

    <!-- 消息内容 -->
    <ImageView
        android:id="@+id/GoodsPreviewImage"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/activity_home_page_goodlist_item_goods_preview_description" />

    <LinearLayout
        android:id="@+id/sellerlayoutMessage"
        android:layout_width="135dp"
        android:layout_height="96dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/price"
            android:layout_width="101dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="￥612.00"
            android:textColor="#FF0000"
            android:textSize="20dp" />

        <!-- 时间戳 -->
        <TextView
            android:id="@+id/postprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="含运费12.00元"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ifrefund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款成功"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="价格"
            android:textColor="@color/text_main"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/GoodsPriceSettingPagePriceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:cursorVisible="false"
            android:drawablePadding="5dp"
            android:ems="10"
            android:focusable="false"
            android:padding="5dp"
            android:singleLine="true"
            android:textIsSelectable="false"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber1Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber2Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />


                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber3Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber4Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber5Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber6Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber7Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber8Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber9Button"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarNumber0Button"
                            android:layout_width="180dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarPointButton"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="."
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/GoodsPriceSettingPageKeyBoarBackSpaceButton"
                            android:layout_width="match_parent"
                            android:layout_height="51.6dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/btn_price_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="删除"
                                android:textColor="@android:color/black"
                                android:textSize="25sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/GoodsPriceSettingPageKeyBoarEnterButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="确定"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_20dp_radius_rectangle"
            android:backgroundTint="#eeeeee"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="搜索你想要的宝贝"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/GoodsPageSellerInfoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <com.demo.sweetfish.ui.component.RoundImageView
                    android:id="@+id/GoodsPageSellerAvatarRoundImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:id="@+id/GoodsPageSellerNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="用户名称" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="X小时前来过" />

                </LinearLayout>

                <TextView
                    android:id="@+id/GoodsPageSellerFollowButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_radius20dp"
                    android:backgroundTint="#eeeeee"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="+ 关注"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/colo_red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/GoodsPageGoodsPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品价格"
                    android:textColor="@color/colo_red"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/GoodsPageGoodsDescribeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品描述\n多打几行\n多打几行\n多打几行\n多打几行\n多打几行\n多打几行"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.demo.sweetfish.ui.goodsPage.GoodsPageActivityPreviewPictureView
                android:id="@+id/GoodsPagePreviewImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:columnCount="6"
                android:rowCount="20">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowSpan="6"
                    android:layout_rowWeight="6"
                    android:layout_column="0"
                    android:layout_columnSpan="6"
                    android:layout_columnWeight="6"
                    android:paddingHorizontal="@dimen/activity_goods_page_preview_list_horizontal_padding"
                    android:paddingVertical="@dimen/activity_goods_page_preview_list_vertical_padding">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_rowSpan="4"
                    android:layout_rowWeight="4"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_columnWeight="4"
                    android:paddingHorizontal="@dimen/activity_goods_page_preview_list_horizontal_padding"
                    android:paddingVertical="@dimen/activity_goods_page_preview_list_vertical_padding">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/activity_home_page_searchbar_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="2"
                    android:layout_column="4"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:paddingHorizontal="@dimen/activity_goods_page_preview_list_horizontal_padding"
                    android:paddingVertical="@dimen/activity_goods_page_preview_list_vertical_padding">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="2"
                    android:layout_column="4"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:paddingHorizontal="@dimen/activity_goods_page_preview_list_horizontal_padding"
                    android:paddingVertical="@dimen/activity_goods_page_preview_list_vertical_padding">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="2"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:paddingHorizontal="@dimen/activity_goods_page_preview_list_horizontal_padding"
                    android:paddingVertical="@dimen/activity_goods_page_preview_list_vertical_padding">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="2"
                    android:layout_column="2"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:paddingHorizontal="@dimen/activity_goods_page_preview_list_horizontal_padding"
                    android:paddingVertical="@dimen/activity_goods_page_preview_list_vertical_padding">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="2"
                    android:layout_column="4"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:paddingHorizontal="@dimen/activity_goods_page_preview_list_horizontal_padding"
                    android:paddingVertical="@dimen/activity_goods_page_preview_list_vertical_padding">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

            </com.demo.sweetfish.ui.goodsPage.GoodsPageActivityPreviewPictureView>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">
        
        <TextView
            android:id="@+id/GoodsPageWantBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_radius20dp"
            android:backgroundTint="@color/primary"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="我想要"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>
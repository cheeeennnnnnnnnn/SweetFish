<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center|start"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/arrow_left"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="确认购买"
            android:textSize="20dp"
            android:layout_marginStart="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/color_link"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/GoodsPayTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品描述\n多打几行\n多打几行\n多打几行\n多打几行"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:gravity="start|center"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <TextView
                            android:id="@+id/goodspaylocation"
                            android:text="收货地址"
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="运费"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="end|center"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="￥0.00"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/colo_red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="实付款："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/GoodsPayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品价格"
            android:textColor="@color/colo_red"
            android:textSize="20sp" />
        <Button
            android:id="@+id/pay_for_goods"
            android:text="确认购买"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>